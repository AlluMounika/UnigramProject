<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/profile_top_bar_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">


        <android.support.v7.widget.Toolbar
            android:id="@+id/profile_top_bar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/profile_top_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/profile_top_bar_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sercan Noyan GermiyanoÄŸlu"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    />

                <!-- TODO 80 ) Settings Icon is assigned to right side -->
                <ImageView
                    android:id="@+id/profile_top_bar_settings_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings"
                    />

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


</merge>
