<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--  TODO 75 ) Designing information section of profile -->
        <LinearLayout
            android:id="@+id/information_scriton_profile_number_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/information_scriton_profile_post_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/information_scriton_profile_followers_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/information_scriton_profile_following_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:layout_marginRight="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/information_scriton_profile_title_linearlayout"
            android:layout_below="@+id/information_scriton_profile_number_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/information_scriton_profile_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Post"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/information_scriton_profile_followers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Followers"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/information_scriton_profile_following_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Followings"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                 />

        </LinearLayout>

        <TextView
            android:id="@+id/information_scriton_profile_edit_profile"
            android:layout_below="@+id/information_scriton_profile_title_linearlayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:background="@drawable/rectangle_border"
            />



    </RelativeLayout>

</merge>